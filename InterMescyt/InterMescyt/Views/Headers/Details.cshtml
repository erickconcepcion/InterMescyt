@model InterMescyt.Data.Header

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Header</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rnc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rnc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InputDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InputDate)
        </dd>
    </dl>
    <a class="btn btn-info" asp-action="Download" asp-controller="Headers" asp-route-id="@Model.Id">Exportar Transaccion</a>
</div>
<p>
    <a asp-action="CreateLine" asp-route-id="@Model.Id">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransLines.FirstOrDefault().Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransLines.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransLines.FirstOrDefault().EnrollNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransLines.FirstOrDefault().Career)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransLines.FirstOrDefault().AcademicIndex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransLines.FirstOrDefault().Period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransLines.FirstOrDefault().Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TransLines)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Career)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicIndex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="DetailsLine" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="EditLine" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="DeleteLine" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
